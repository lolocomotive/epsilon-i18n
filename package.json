{
    "name": "epsilon-i18n",
    "displayName": "Epsilon I18n",
    "description": "I18n support for the epsilon graphing calculator (numworks) operating system",
    "icon": "logo.png",
    "version": "1.0.1",
    "author": "lolocomotive",
    "publisher": "lolocomotive",
    "repository": {
        "type": "git",
        "url": "https://github.com/lolocomotive/epsilon-i18n.git"
    },
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "epsilon-i18n",
                "aliases": [
                    "Epsilon i18n",
                    "epsilon-i18n"
                ],
                "extensions": [
                    ".i18n"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "epsilon-i18n",
                "scopeName": "source.i18n",
                "path": "./syntaxes/epsilon-i18n.tmLanguage.json"
            }
        ]
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:epsilon-i18n"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}